{% extends "base.html.twig" %}

{% block title %}About{% endblock %}

{% block body %}
    <h1>API</h1>
    <ul>
        <b>
            <a href="{{ path('api') }}/lucky/number">
                <li>/api/lucky/number</li>
            </a>
        </b>
        <p>Displays a random number and a welcome message.</p>
        <b>
            <a href="{{ path('api') }}/quote">
                <li>/api/quote</li>
            </a>
        </b>
        <p>Displays the current day, timestamp and a random quote.</p>
        <b>
            <a href="{{ path('api') }}/deck">
                <li>/api/deck</li>
            </a>
        </b>
        <p>Displays the deck array data structure.</p>
        <b>
            <a href="{{ path('api') }}/deck/shuffle">
                <li>/api/deck/shuffle</li>
            </a>
        </b>
        <p>Displays the deck array data structure in random order.</p>
        <b>
            <a href="{{ path('api') }}/deck/draw">
                <li>/api/deck/draw</li>
            </a>
        </b>
        <p>Draws one card and displays it as an array data structure.</p>
        <b>
            <a href="{{ path('api') }}/deck/draw/5">
                <li>/api/deck/draw/{number}</li>
            </a>
        </b>
        <p>Draws a certain number of cards and displays them as an array data structure.</p>
        <b>
            <a href="{{ path('api') }}/game">
                <li>/api/game</li>
            </a>
        </b>
        <p>Displays the state of the game.</p>
        <b>
            <a href="{{ path('api') }}/session/delete">
                <li>/api/session/delete</li>
            </a>
        </b>
        <p>Clears the session.</p>
    </ul>

{% endblock %}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="{{ asset('img/glider.svg') }}">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        <nav class="adventureNav">
            <ul>
                <li><a href="{{ path('proj') }}">Proj</a></li>
                <li><a href="{{ path('proj_about') }}">About</a></li>
                <li><a href="{{ path('adventure_app') }}">Game</a></li>
            </ul>
        </nav>
        <main class="main">
            {% block body %}{% endblock %}
        </main>
        <footer class="adventureFooter">Copyrighted av mig!</footer>
    </body>
</html>
